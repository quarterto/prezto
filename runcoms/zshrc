alias j="jruby -S"

alias mirah="j mirah"
alias mirahc="j mirahc"
alias pindah="j pindah"

ulimit -c 0

function sublime {
    subl $(cygpath -w $1)
}
function sublimew {
    subl -w $(cygpath -w $1)
}