# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...

function aapt {
    TOP=/cygdrive/c/Program\ Files\ \(x86\)/Android/android-sdk
    "$TOP"/platform-tools/aapt.exe "$@"
}
function adb {
    TOP=/cygdrive/c/Program\ Files\ \(x86\)/Android/android-sdk
    "$TOP"/platform-tools/aapt.exe "$@"
}
